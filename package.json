{
  "name": "brick-log4js",
  "version": "0.2.0",
  "description": "log4js plugin for brick engine",
  "main": "index.js",
  "types": "typings/index.d.ts",
  "scripts": {
    "docs": "jsdoc -c conf.json",
    "build": "tsc -d",
    "build:w": "tsc -d -w",
    "lint": "eslint --fix .",
    "check": "npm run build && npm run lint",
    "test": "npm run check && jest --coverage --env=node --runInBand",
    "watch": "jest --watch"
  },
  "files": [
    "typings",
    "package.json",
    "lib",
    "xprovide.js",
    "inject.js",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kiba-zhao/brick-log4js.git"
  },
  "bugs": {
    "url": "https://github.com/kiba-zhao/brick-log4js/issues"
  },
  "homepage": "https://github.com/kiba-zhao/brick-log4js#readme",
  "keywords": [
    "log4js",
    "brick",
    "logger",
    "log"
  ],
  "author": "kiba.x.zhao",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/lodash": "^4.14.167",
    "@types/node": "^14.14.20",
    "brick-engine": "^0.7.0",
    "eslint": "^7.17.0",
    "eslint-config-egg": "^9.0.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "jsdoc": "^3.6.6",
    "typescript": "^4.1.3",
    "xboot": "^0.5.0",
    "xprovide": "^0.4.0"
  },
  "dependencies": {
    "lodash": "^4.17.20",
    "log4js": "^6.3.0"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm test"
    }
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/$1"
    },
    "collectCoverageFrom": [
      "lib/**/*.js",
      "xprovide.js",
      "inject.js"
    ]
  }
}
